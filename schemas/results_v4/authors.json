{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openproblems.bio/schemas/results_v4/authors.json",
  "title": "Associated authors",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "description": "Author name",
        "type": "string"
      },
      "roles": {
        "description": "Author roles",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "github": {
        "description": "Author GitHub username",
        "type": ["null", "string"]
      },
      "orcid": {
        "description": "Author ORCID",
        "type": ["null", "string"]
      },
      "info": {
        "description": "Additional information about the author",
        "type": "object"
      }
    },
    "required": ["name", "roles", "github", "orcid"]
  }
}
